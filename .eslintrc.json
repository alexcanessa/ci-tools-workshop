{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        },
        "allowImportExportEverywhere": false
    },
    "extends": [
        "standard"
    ],
    "rules": {
        "semi": [2, "always"]
    }
}
